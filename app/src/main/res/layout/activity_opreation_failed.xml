<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".Opreation_Failed">

    <LinearLayout
        android:id="@+id/error_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/circle"> <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:src="@drawable/xincircle"
            app:tint="#E24F4F" />
        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/outfit_semibold"
            android:text="Operation Failed! ðŸš«"
            android:textColor="#E24F4F"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/error_header"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/outfit_semibold"
            android:text="Error Details:"
            android:textColor="#ADADAD"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_error_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/outfit_semibold"
            android:gravity="center"
            android:text="Exception Error"
            android:textColor="#1A1C1E"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_error_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/outfit_semibold"
            android:gravity="center"
            android:text="Please check your connection or try again later."
            android:textColor="#808080"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:orientation="vertical"
        android:paddingStart="25dp"
        android:paddingEnd="25dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_back_home"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:backgroundTint="#447AE3"
            android:fontFamily="@font/outfit_semibold"
            android:text="Back to Home"
            android:textAllCaps="false"
            android:textSize="18sp"
            app:cornerRadius="12dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_retry"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/outfit_semibold"
            android:text="Try Again"
            android:textAllCaps="false"
            android:textColor="#447AE3"
            android:textSize="16sp"
            app:cornerRadius="12dp"
            app:strokeColor="#447AE3"
            app:strokeWidth="1.5dp" />
    </LinearLayout>

</RelativeLayout>